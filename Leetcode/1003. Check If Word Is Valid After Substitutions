https://leetcode.com/problems/check-if-word-is-valid-after-substitutions/

class Solution {
    public boolean isValid(String s) {
        int len = s.length();
        while(true){
            int index = s.indexOf("abc");
            if(index == -1){
                break;
            }
            s = s.replace("abc","");
        }
        return (s.equals(""));
    }
}
